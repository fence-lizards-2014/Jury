

<h3>Display of a specific case</h3>


<div><%= @case.title %></div>
<br/>
<div class="person1">PLAINTIFF: <%= @case.users.first.user_name %>

<div class="video1"><iframe width="560" height="315" src="<%= @case.evidences.first.video_url %>" frameborder="0" allowfullscreen></iframe></div>

<div class="argumentText1">PLAINTIFF's ARGUMENT: <%= @case.evidences.first.argument %></div>

</div>




<div class="person2">DEFENDANT:<%= @case.users.last.user_name %>

<div class="video2"><iframe width="420" height="315" src="<%= @case.evidences.last.video_url %>" frameborder="0" allowfullscreen></iframe></div>

<div class="argumentText2">Defendant's ARGUMENT: <%= @case.evidences.last.argument %></div>

</div>

<div class="commentsBox">
<p>Comments</p>
<% @case.comments.each do |comment| %>
<span> <%= User.find(comment.user_id).user_name %> : <%= comment.content %> </span><br>
<% end %>





</div>

