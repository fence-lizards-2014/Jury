
<article id = "commentslist">

<% @case.comments.each do |comment| %>
    <%= comment.body %> -<%= User.find(comment.user_id).user_name %>
    <%= button_to "Like", votes_path(direction: "up", comment_id: comment.id, user_id: session[:id]), remote: true, :form => { :id => "like", "data-type" => "json" } %>
    <%= button_to "Dislike", votes_path(direction: "down", comment_id: comment.id, user_id: session[:id]), remote: true, :form => { :id => "like", "data-type" => "json" } %>
    Up-Votes:<%= comment.votes.where(:direction => "up").count %>
    <br>
    Down-Votes:<%= comment.votes.where(:direction => "down").count %>
    <br>
  <% end %>
</article>

