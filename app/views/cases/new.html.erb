<div id="create_case_box">
  <span id="new_case_title">Create a New Case</span>
  <div id="case_form_div">
  <%= form_tag cases_path,:id => 'create_case_form' do %>
    <p>Title</p>
    <%= text_field_tag :title , nil, :class => 'input_box'%>
    <p>Summary</p>
    <%= text_area_tag :summary %>
